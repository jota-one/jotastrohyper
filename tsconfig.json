{
  "extends": "astro/tsconfigs/strict",
  "include": ["**/*", ".astro/**/*.mjs"],
  "exclude": ["dist"],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@images/*": ["src/assets/*"]
    }
  }
}
